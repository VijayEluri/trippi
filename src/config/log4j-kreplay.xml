<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
        
  <appender name="KOWARILOG" class="org.apache.log4j.FileAppender">
    <param name="file" value="kowari.log"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c{1} %m%n"/>
    </layout>
  </appender>

  <root>
    <priority value="INFO" />
    <appender-ref ref="KOWARILOG"/>
  </root>
  
</log4j:configuration>